{% extends "UserBundle::layout.html.twig" %}


{% block content %}
<!-- Page heading starts -->

<div class="page-head">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Zaloguj się</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page Heading ends -->

<!-- Page content starts -->


<div class="content">

	<div class="container">
		<br />
    	<div class="row">
    		<div class="col-md-6">
            	<!-- Some content -->
            	<h2 class="title">Zarejestruj się <span class="color">dzisiaj</span> !</h2>

            	<a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">Zarejestruj się</a>

            </div>

            <!-- Login form -->
            <div class="col-md-6">
            	<div class="formy well">
                <!-- Title -->
                <h3 class="title">Zaloguj się</h3>
				<p>&nbsp;</p>
                <div class="form">

                      <!-- Login form (not working)-->
                    {% block fos_user_content %}
						{% if error %}
						    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
						{% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
				    
				    <div class="form-group">
                    	<label for="inputEmail1" class="col-lg-2 control-label">Nick</label>
                    	<div class="col-lg-8">
				    	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				   		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Login"/>
				   		</div>
				   	</div>

				   	<div class="form-group">
				   		<label for="password" class="col-lg-2 control-label">Hasło</label>
				   		<div class="col-lg-8">
				   			<input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Hasło"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-offset-2 col-lg-8">
                            <div class="checkbox">
                            	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            	<label for="remember_me">Zapamiętaj mnie</label>                            
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                        	<input type="submit" id="_submit" name="_submit" value="Zaloguj" class="btn btn-default"/>
                        	<button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    </div>

                    </form>

{% endblock fos_user_content %}
                      
                      <hr />

                      <h5>Nowe konto</h5>
                      <!-- Register link -->
                             Nie masz konta? <a href="{{ path('fos_user_registration_register') }}">Zarejestruj się</a>
                    </div> 
                </div>
                

            </div>

    </div>
    <hr />
  </div>
</div>
<!-- Page content ends -->

{% endblock %}

